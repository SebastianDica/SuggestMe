<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codefaction.suggestme11.GroupSummary">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/groupSummaryDetails"
            android:textSize="40sp"
            android:textAlignment="center"/>

        <Space
             android:layout_width="fill_parent"
             android:layout_height="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:id="@+id/groupNameSummary"
            android:textSize="30sp"
            android:textColor="@color/primary_dark_material_dark"
            />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/groupSummaryNoMembers"
                android:textSize="20sp"/>

            <Space
                android:layout_width = "10dp"
                android:layout_height= "10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numberOfMembers"
                android:textSize="20sp"/>

            <Space
                android:layout_width = "10dp"
                android:layout_height= "10dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/groupSummaryCreationDate"
                android:textSize="20sp"/>

            <Space
                android:layout_width = "10dp"
                android:layout_height= "10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/creationDate"
                android:textSize="20sp"/>

            <Space
                android:layout_width = "10dp"
                android:layout_height= "10dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/groupSummaryKeywords"
                android:textSize="20sp"/>

            <Space
                android:layout_width = "10dp"
                android:layout_height= "10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/groupKeywords"
                android:textSize="20sp"/>

            <Space
                android:layout_width = "10dp"
                android:layout_height= "10dp" />

        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/groupSummaryNoSuggestions"
                android:textSize="20sp"/>

            <Space
                android:layout_width = "10dp"
                android:layout_height= "10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numberOfSuggestions"
                android:textSize="20sp"/>

            <Space
                android:layout_width = "10dp"
                android:layout_height= "10dp" />

        </TableRow>


        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/groupSummaryGroupDescription"
        android:textSize="20sp"/>

    </LinearLayout>


</RelativeLayout>
