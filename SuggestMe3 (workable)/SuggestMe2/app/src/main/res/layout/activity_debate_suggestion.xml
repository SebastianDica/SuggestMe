<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codefaction.suggestme11.DebateSuggestion">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" >

        <Space
            android:layout_width="fill_parent"
            android:layout_height="100dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/debateSug"
            android:hint="@string/yourSuggestionDebateSuggestion"
            android:clickable="false"
            android:editable="true"
            android:enabled="true"
            android:textColor="@color/common_signin_btn_light_text_default"
            android:textSize="25sp"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/debTagbox"
            android:hint="@string/addTagsDebateSuggestion"
            android:editable="true"
            android:background="#bb95a7b7"
            android:textColor="@color/abc_secondary_text_material_light"
            android:enabled="true"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <Button
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:text="@string/startDebateButton"
            android:id="@+id/submitDeb"
            android:layout_gravity="center_horizontal"
            android:enabled="true"
            android:clickable="true"
            android:onClick="submitDebate" />

    </LinearLayout>

</RelativeLayout>
