<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codefaction.suggestme11.Login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayoutLoginActivity">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loginString"/>
        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/loginTypeEmail"
            android:ems="10"
            android:id="@+id/loginEmail"
            />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loginPassword"/>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/loginTypePassword"
            android:ems="10"
            android:id="@+id/loginPass"
          />

        <Space
            android:layout_width="20dp"
            android:layout_height="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loginButton"
            android:id="@+id/signIn"
            android:background="#ff4f5fff"
            android:textColor="@android:color/background_light"
            android:onClick="login"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:text="@string/registerButton"
            android:id="@+id/register"
            android:layout_gravity="right"
            android:textColor="@android:color/background_light"
            android:background="#ff4659ff"
            android:onClick="callRegister" />
    </LinearLayout>

</RelativeLayout>
